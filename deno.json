{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable", "Deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "imports": {
    "@anthropic-ai/sdk": "npm:@anthropic-ai/sdk@^0.41.0",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "@swc/core": "npm:@swc/core@^1.11.24",
    "@swc/wasm": "npm:@swc/wasm@^1.11.24",
    "@types/react": "npm:@types/react@^19.0.10",
    "@types/react-dom": "npm:@types/react-dom@^19.0.4",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
    "openai": "npm:openai@^4.97.0",
    "pdf-lib": "npm:pdf-lib@^1.17.1",
    "pdfjs-dist": "npm:pdfjs-dist@^5.2.133",
    "react": "npm:react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "tesseract.js": "npm:tesseract.js@^6.0.1",
    "vite": "npm:vite@^6.3.5"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  }
}
